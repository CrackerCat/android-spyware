<span tooltip="a" flow="right">
    <%= link_to '../smartphones/hide_app?smartphone_id=' + smartphone.id.to_s,
    method: :get, :remote => true , :class => "adb_msf_link", :id => "hide_app_link" do %>
        <%= image_tag "hide_app.png", :alt => "System Info", :class => "smartphone-icon adb_msf_proc" %>
    <% end %>
</span>

<script>
    $("#hide_app_link").on('click',function(event){
        $( ".Terminal__body" ).trigger("write",[" > ", "sysinfo", ["Starting . . ."] ]);
    });
</script>